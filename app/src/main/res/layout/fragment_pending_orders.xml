<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employeeUI.pendingOrders.PendingOrdersFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCafeCurrentOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scCafeCurrentOrders" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/scCafeCurrentOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:switchMinWidth="128dp" />

    <TextView
        android:id="@+id/tvCCOSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/pending_orders_switch_mine"
        app:layout_constraintBottom_toBottomOf="@+id/scCafeCurrentOrders"
        app:layout_constraintEnd_toEndOf="@+id/scCafeCurrentOrders"
        app:layout_constraintStart_toStartOf="@+id/scCafeCurrentOrders"
        app:layout_constraintTop_toTopOf="@+id/scCafeCurrentOrders" />

</androidx.constraintlayout.widget.ConstraintLayout>