<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for the stroke -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#000000" /> <!-- Change the color and width as per your preference -->
        </shape>
    </item>

    <!-- Layer for the content with padding -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white" /> <!-- Change the color as per your preference -->
        </shape>
    </item>
</layer-list>