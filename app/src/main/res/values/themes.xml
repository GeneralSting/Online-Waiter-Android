<resources>
    <!-- Base application theme. -->
    <style name="Theme.OnlineWaiter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pewter_blue
        </item>       <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimaryVariant">@color/pewter_blue
        </item>    <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorOnPrimary">@color/light_cyan</item>    <!--text-->
        <!-- Secondary brand color. -->
        <!--All the components defined in the library uses this attribute.-->
        <item name="colorSecondary">@color/tumbleweed</item>
        <item name="colorSecondaryVariant">@color/tumbleweed</item>
        <item name="colorOnSecondary">@color/light_cyan</item>
        <!--colorAccent â€“ The color of UI controls such as check boxes, radio buttons, and edit text boxes.-->
        <item name="colorAccent">@color/tumbleweed</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="orderCheckbox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/tumbleweed</item>
        <item name="android:textColorSecondary">@color/tumbleweed</item>  // for unchecked
    </style>

    <style name="DialogAlertAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Theme.OnlineWaiterDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OnlineWaiterDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>